<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.changho.changholock">
    <uses-permission android:name="android.permission.GET_TASKS"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- [START gcm_permission] -->
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <!-- [END gcm_permission] -->
    <permission android:name="com.example.changho.changholock.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />
    <uses-permission android:name="com.example.changho.changholock.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!-- GCM 수신 BroadcastReceiver -->
        <service android:name=".GCMIntentService" />
        <service android:name=".MainService" />
        <service android:name=".TimerService" />
        <activity
            android:name=".MainActivity"
            android:label="KidManagement"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LockScreen"
            android:label="LockScreen"
            android:launchMode="singleInstance"
            android:excludeFromRecents="true"
            android:taskAffinity="">
        </activity>
        <activity
            android:name=".InstalledAppShow">
        </activity>
        <activity
            android:name=".Test_GCM">
        </activity>
        <activity
            android:name=".TimeOut"
            android:label="TimeOut">
        </activity>
        <activity
            android:name=".TargetedApp">
        </activity>
        <activity
            android:name=".NotificationActivity">
        </activity>

        <!-- Broadcast receiver -->
        <receiver android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <category android:name="com.example.changho.changholock" />
            </intent-filter>
        </receiver>
        <!-- end -->

        <activity android:name=".Controller"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Controller$Device_Admin_Test"
            android:label="KidManagement"
            android:permission="android.permission.BIND_DEVICE_ADMIN">
            <meta-data android:name="android.app.device_admin"
                android:resource="@xml/device_admin" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

    </application>
</manifest>
